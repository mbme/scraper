{
  "name": "scraper",
  "version": "2.11.0",
  "description": "Scrape the data from the page you're on.",
  "main": "index.js",
  "types": "types/index.d.ts",
  "type": "module",
  "scripts": {
    "check-types": "tsc --noEmit --project tsconfig.json",
    "build": "tsx build.ts",
    "prod:build": "NODE_ENV=production npm run build",
    "build:typings": "npx tsc --declaration --emitDeclarationOnly --outDir ./types",
    "lint": "eslint --cache --ext .ts src/",
    "fmt": "prettier --write src/",
    "check-fmt": "prettier --check src/",
    "test": "",
    "preversion": "npm run check-types && npm run lint && npm run check-fmt",
    "version": "npm run prod:build && cp dist/scraper.user.js* docs/ && git add -f docs/scraper.user.js* && npm run build:typings && git add -f types/",
    "postversion": "git push && git push --tags"
  },
  "author": "mbme",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "puppeteer-core": "^24.26.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "urlpattern-polyfill": "^10.1.0"
  },
  "files": [
    "src/",
    "docs/",
    "types/"
  ]
}
